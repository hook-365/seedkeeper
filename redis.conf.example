# Redis Configuration for Seedkeeper
# Copy to redis.conf and update password

# Network
bind 0.0.0.0
protected-mode yes
port 6379

# Authentication - CHANGE THIS!
requirepass YOUR_REDIS_PASSWORD_HERE

# Persistence
save 900 1
save 300 10
save 60 10000
dbfilename seedkeeper.rdb
dir /data

# Memory Management
maxmemory 256mb
maxmemory-policy allkeys-lru

# Security - Disable dangerous commands
rename-command FLUSHDB ""
rename-command FLUSHALL ""
rename-command CONFIG ""
rename-command SHUTDOWN ""

# Keep KEYS for development only
# rename-command KEYS ""

# Logging
loglevel notice
logfile ""

# Performance
tcp-backlog 511
timeout 0
tcp-keepalive 300